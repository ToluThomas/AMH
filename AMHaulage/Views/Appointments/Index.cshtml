@model AMHaulage.Models.AppointmentLocationViewModel

@{
    ViewData["Title"] = "Appointments";
}

<h1>Appointments</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<!-- Make form GET so that users can save URLs to certain search results-->
<form asp-controller="Appointments" asp-action="Index" method="get">
    <p>
        <select asp-for="AppointmentLocation" asp-items="Model.Locations">
            <option value="">All locations</option>
        </select>
        Appointment summary: <input type="text" asp-for="SearchString">
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].Driver)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].Vehicle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Appointments[0].EndDate)
        </th>

        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointments){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Driver)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Summary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vehicle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
